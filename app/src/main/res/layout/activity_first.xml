<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oldlace"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="名称："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Text1"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入名称"
            android:paddingLeft="2dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="语音" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="7dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="道路名"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Text2"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="2dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/speak1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="语音" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="7dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="污染物名称："
            android:textSize="19sp" />

        <EditText
            android:id="@+id/Text4"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="2dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/speak3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="语音" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="7dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="桩号："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Text3"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="2dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/speak2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="语音" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="污染物类型："
            android:textSize="19sp" />

        <EditText
            android:id="@+id/Text5"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入"
            android:paddingLeft="2dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/speak4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="语音" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="污染物面积："
            android:textSize="19sp" />

        <EditText
            android:id="@+id/tv_pollArea"
            android:layout_width="168dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_smallArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_blue_record"
            android:text="小" />

        <Button
            android:id="@+id/btn_largeArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ext_dev"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="@dimen/dp_45"
        android:gravity="center">

        <Button
            android:id="@+id/button_submit"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_round_green_disable"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/bridge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/bridge2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>